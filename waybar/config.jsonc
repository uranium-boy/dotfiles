    "sway/mode": {
        "format": "<span style=\"italic\">{}</span>"
    },
    "sway/scratchpad": {
        "format": "{icon} {count}",
        "show-empty": false,
        "format-icons": ["", "ï‹’"],
        "tooltip": true,
        "tooltip-format": "{app}: {title}"
    },
    "custom/wlsunset": {
        "format": "{icon}",
        "format-icons": {
            "on": "ï®",
            "off": "ï°"
        },
        "interval": "once",
        "exec": "~/.config/waybar/status_wlsunset.sh",
        "on-update": "~/.config/waybar/status_wlsunset.sh",
        "return-type": "json",
        "signal": 5,
        "on-click": "~/.config/waybar/toggle_wlsunset.sh",
        "tooltip-format": "{text}"
    },
    "bluetooth": {
